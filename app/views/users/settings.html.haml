#settings
  
  %section#switch
    %h3 Email Sending
    #toggle{:class => current_user.active? ? "" : "off"}
      #handle

  #the-rest
  
    #cover{:style => current_user.active? ? "display:none;" : ""}

    %section#emails
      %h3 To These Email Addresses
      %ul
        %li= current_user.email

    %section#days
      %h3 On This Day
      %ul
        %li{day: 1} Mon
        %li{day: 2} Tue
        %li.selected{day: 3} Wed
        %li{day: 4} Thu
        %li{day: 5} Fri
        %li{day: 6} Sat
        %li{day: 7} Sun
  
    %section#test
      %h3 See It In Action
      = link_to("Send me an email now", send_email_path)