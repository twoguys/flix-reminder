@import "colors.css.scss";

section.top, section.bottom {
	.inner {
		width: 800px;
		margin: 0 auto;
		position: relative;
	}
}
		
section.top {
	background-color: $pink;
	height: 630px;
	header {
		padding-top: 20px;
		#logo {
			text-indent: -9999px;
			width: 261px;
			height: 69px;
			margin-bottom: 5px;
			background: transparent url(<%= asset_path 'logo.png' %>);
		}
	}
}

section.bottom {
	background-color: $light_grey;
	min-height: 10px;
	@include boxshadow;
	text-shadow: 0 1px 1px #fff;
}