@import "colors.css.scss";

section.top, section.bottom, section.login {
	.inner {
		width: 800px;
		margin: 0 auto;
		position: relative;
	}
}

section.login {
	padding: 5px 0;
	background: $red;
	text-align: right;
	span, a {
		color: $dark_red;
		font-style: italic;
		font-size: 14px;
	}
	a {
		text-decoration: underline;
	}
	a:hover {
		color: #fff;
	}
}
		
section.top {
	background-color: $pink;
	height: 630px;
	header {
		padding-top: 20px;
		#logo {
			text-indent: -9999px;
			width: 261px;
			height: 69px;
			margin: 0 0 5px 45px;
			background: transparent url(<%= asset_path 'logo.png' %>);
		}
	}
}

section.bottom {
	background-color: $light_grey;
	height: 200px;
	position: relative;
	z-index: 2;
	min-height: 10px;
	@include boxshadow;
	text-shadow: 0 1px 1px #fff;
}