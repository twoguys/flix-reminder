@import "colors.css.scss";

section.phone {
	width: 370px;
	height: 536px;
	background: transparent url(<%= asset_path 'iphone.png' %>) no-repeat;
	float: left;
}

section.explanation {
	width: 356px;
	float: left;
	margin: 60px 0 0 42px;
	h2 {
		background: transparent url(<%= asset_path 'flourish.png' %>) no-repeat 50% 100%;
		padding-bottom: 25px;
		margin-bottom: 10px;
		font-size: 21px;
		font-weight: 300;
		font-style: italic;
		color: #fff;
		text-align: center;
		line-height: 1.5em;
	}
}

#form-backer {
	background: $light_grey;
	width: 380px;
	position: absolute;
	top: -260px;
	left: 400px;
	height: 260px;
	@include boxshadow;
	-webkit-border-top-left-radius: 5px;
	-webkit-border-top-right-radius: 5px;
	-moz-border-radius-topleft: 5px;
	-moz-border-radius-topright: 5px;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
}

form#signup {
	position: absolute;
	top: -235px;
	left: 450px;
	width: 280px;
	label {
		font-size: 19px;
		font-weight: 300;
		font-style: italic;
		margin-bottom: 10px;
		display: block;
		text-align: center;
	}
	ul.days {
		height: 30px;
		margin-bottom: 30px;
		li {
			float: left;
			width: 38px;
			height: 30px;
			padding-top: 4px;
			text-align: center;
			background: transparent url(<%= asset_path 'dayButton.png' %>) no-repeat 0 0;
			cursor: pointer;
			margin: 0 1px;
		}
		li.selected {
			background-position: 0 -34px;
			height: 24px;
			padding-top: 10px;
		}
	}
	input[type="text"] {
		width: 260px;
		text-align: center;
		margin-bottom: 20px;
	}
	input[type="submit"] {
		width: 280px;
		
	}
	::-webkit-input-placeholder { text-align: center; }
	input:-moz-placeholder { text-align: center; }
	
	p {
		font-style: italic;
		margin-top: 30px;
		text-align: center;
		color: $light_grey - #444;
	}
}