@import "colors.css.scss";

#settings, #adjusted {
	padding: 30px 30px 0;
}

#settings {
	section {
		margin-top: 30px;
		h3 {
			font-size: 11px;
			font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
			text-transform: uppercase;
			margin-bottom: 5px;
			color: #803030;
		}
	}
	#switch {
		float: left;
		width: 100px;
		margin-right: 30px;
		#toggle {
			width: 84px;
			height: 28px;
			background: transparent url(<%= asset_path "onOffSwitchBG.png" %>) no-repeat 0 0;
			position: relative;
			cursor: pointer;
			#handle {
				width: 44px;
				height: 28px;
				position: absolute;
				top: 0;
				left: 0;
				background: transparent url(<%= asset_path "onOffSwitchHandle.png" %>) no-repeat 0 0;
			}
		}
		#toggle.off #handle {
			left: 40px;
		}
	}
	#the-rest {
		float: left;
		position: relative;
		padding-bottom: 5px;
		#cover {
			position: absolute;
			width: 100%;
			height: 100%;
			background: $pink;
			opacity: 0.7;
		}
	}
	#emails {
		li {
			padding: 5px 0;
			color: #fff;
		}
	}
	#days {
		ul {
			height: 30px;
			width: 280px;
			margin: 0 auto 30px;
			li {
				float: left;
				width: 38px;
				height: 30px;
				padding-top: 4px;
				text-align: center;
				background: transparent url(<%= asset_path 'dayButton.png' %>) no-repeat 0 0;
				cursor: pointer;
				margin: 0 1px;
			}
			li.selected {
				background-position: 0 -34px;
				height: 24px;
				padding-top: 10px;
			}
		}
	}
	#test {
		a {
			display: block;
			@include button;
			width: 200px;
			height: 36px;
			line-height: 36px;
		}
	}
}

#adjusted {
	h2 {
		font-size: 18px;
	}
}